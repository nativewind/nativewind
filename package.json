{
  "version": "5.0.0",
  "name": "nativewind",
  "description": "Use Tailwindcss in your cross-platform React Native applications",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/module/index.js",
      "require": "./dist/commonjs/index.js",
      "typescript": "./dist/typescript/commonjs/src/index.d.ts"
    },
    "./metro": {
      "import": "./dist/module/metro/index.js",
      "require": "./dist/commonjs/metro/index.js",
      "typescript": "./dist/typescript/commonjs/src/metro/index.d.ts"
    },
    "./babel": {
      "import": "./dist/module/babel/index.js",
      "require": "./dist/commonjs/babel/index.js",
      "typescript": "./dist/typescript/commonjs/src/babel/index.d.ts"
    },
    "./tailwind": {
      "import": "./src/tailwindcss/theme.css",
      "require": "./src/tailwindcss/theme.css"
    },
    "./types": {
      "typescript": "./types.d.ts"
    }
  },
  "main": "./dist/commonjs/index.js",
  "types": "./dist/typescript/commonjs/src/index.d.ts",
  "sideEffects": false,
  "keywords": [
    "react-native",
    "react",
    "native",
    "tailwind",
    "tailwindcss",
    "theme",
    "style"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marklawlor/nativewind.git"
  },
  "author": {
    "name": "Mark Lawlor",
    "url": "https://github.com/marklawlor"
  },
  "homepage": "https://nativewind.dev",
  "bugs": {
    "url": "https://github.com/marklawlor/nativewind/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint .",
    "prepublishOnly": "npm run build && npm test",
    "build": "bob build",
    "prepare": "bob build"
  },
  "files": [
    "dist",
    "src",
    "types.d.ts"
  ],
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@react-native/typescript-config": "^0.80.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "react-native-css": "3.0.0-nightly.27bd5e2",
    "@testing-library/react-native": "^12.0.1",
    "@types/jest": "^29.5.1",
    "jest": "^29.3.1",
    "jest-expo": "^50.0.1",
    "prettier": "^3.3.1",
    "react-native": "^0.80.1",
    "react-native-builder-bob": "^0.40.12",
    "tailwindcss": "^4.1.11",
    "tw-colors": "^3.3.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react-native-css": "3.0.0-nightly.27bd5e2",
    "tailwindcss": ">4.1.11"
  },
  "module": "./dist/module/index.js",
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      "typescript"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ]
}
